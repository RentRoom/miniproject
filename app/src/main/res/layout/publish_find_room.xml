<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.qfindhouse.PublishFindRoomActivity"
    android:background="@color/colorWhiteWhiteGray"
    >
    <include
        android:id="@+id/publish_find_room_header"
        layout="@layout/include_header"/>
    <LinearLayout
        android:id="@+id/publish_find_room_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/publish_find_room_header"
        android:background="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        >
        <LinearLayout
            android:id="@+id/publish_find_room_budget_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="预算"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/budget"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="价格"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/月"
                android:layout_gravity="center"

                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorDarkGray"
            />
        <LinearLayout
            android:id="@+id/publish_find_room_live_time_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="入住时间"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/live_time"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="日期"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorDarkGray"
            />
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="租住形式"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#4793FC"
                android:text="整租"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#4793FC"
                android:text="合租"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/publish_find_room_top_container"
        android:background="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/need_text"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="租住需求"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            />
        <EditText
            android:id="@+id/need_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:background="@drawable/edit_shape"
            android:hint="可以详细的描述你的租房需求哦：\n
1 介绍自己，如兴趣，爱好\n
2 描述自己的特殊需求，如养宠物，情侣入住等\n
3 简单描述对房屋位置，装修，户型要求\n
4 对室友有无性别要求，性格偏好"
            android:inputType="textMultiLine"
            android:layout_below="@id/need_text"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            />
    </RelativeLayout>



    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/publish_find_room_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发布"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:background="@drawable/publish_shape"
        />


    </RelativeLayout>
