<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.qfindhouse.FindRoomDetail">
    <RelativeLayout
        android:id="@+id/find_room_detail_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        >
        <Button
            android:id="@+id/find_room_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/find_room_detail_header"
        android:background="@color/colorDarkGray"
        android:layout_marginTop="0dp"
        />
    <RelativeLayout
        android:id="@+id/find_room_detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/find_room_detail_header"
        android:background="@color/colorWhiteWhiteGray"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/user_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:text="GUODONGPENG"
            />
        <LinearLayout
            android:id="@+id/description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/user_icon"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/user_icon"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="描述："
                android:textSize="18dp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/rent_room_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaa"
                android:textSize="15dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/find_room_detail_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/find_room_detail_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorDarkGray"
            android:text="收藏"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/find_room_detail_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/send_message_style"
            android:layout_margin="6dp"
            android:textSize="15dp"
            android:text="私信联系"
            android:textColor="@color/colorDarkGray"
            />
    </LinearLayout>
</RelativeLayout>
