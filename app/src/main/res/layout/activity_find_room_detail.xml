<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteWhiteGray"
    tools:context="com.example.administrator.qfindhouse.FindRoomDetail">
    <RelativeLayout
        android:id="@+id/find_room_detail_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorWhite"
        >
        <Button
            android:id="@+id/find_room_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求租详情"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/find_room_detail_header"
        android:background="@color/colorDarkGray"
        android:layout_marginTop="0dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/relativelayout_shape"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/colorSkyBlue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/user_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:text="GUODONGPENG"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/relativelayout_shape"
        >
        <LinearLayout
            android:id="@+id/subTag_container"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/live_right_now"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/colorSkyBlue"
                android:text=" 立即入住 "
                android:textSize="15dp"
                android:background="@drawable/tag_shape"
                />
            <TextView
                android:id="@+id/live_budget"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/colorSkyBlue"
                android:text=" 预算2000/月 "
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tag_shape"
                />
            <TextView
                android:id="@+id/rent_type"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" 整租/合租 "
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorSkyBlue"
                android:textSize="15dp"
                android:background="@drawable/tag_shape"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/find_room_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2018-05-06"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/subTag_container"
            />
        <TextView
            android:id="@+id/find_room_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求租万利达附近3公里内房子，如果是实习生可以一起求租，欢迎联系噢。"
            android:textSize="15dp"
            android:layout_below="@id/subTag_container"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/subTag_container"
            android:layout_alignEnd="@id/find_room_date"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/relativelayout_shape"
        >
        <TextView
            android:id="@+id/location_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_location_on_black_24dp"
            />
        <TextView
            android:id="@+id/rent_room_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="万利达科技大厦"
            android:layout_toRightOf="@id/location_icon"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
