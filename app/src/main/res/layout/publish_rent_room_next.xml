<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/publish_rent_room_header_next"
        layout="@layout/include_header_rent"/>

    <LinearLayout
        android:id="@+id/publish_find_room_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/publish_rent_room_header_next"
        android:background="@drawable/relativelayout_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"

        >
        <LinearLayout
            android:id="@+id/publish_find_room_budget_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="租金价格"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/budget_begin"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="最低价格"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/budget_end"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="最高价格"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/月"
                android:layout_gravity="center"

                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorDarkGray"
            />
        <LinearLayout
            android:id="@+id/publish_find_room_live_time_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="入住时间"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/live_time"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="最晚入住日期"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorDarkGray"
            />
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="租住形式"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/whole_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#4793FC"
                android:text="整租"
                />
            <Button
                android:id="@+id/part_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#4793FC"
                android:text="合租"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/publish_rent_room_button_finish"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发布"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:background="@drawable/contact_shape"
        />
</RelativeLayout>