<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/room_location_name"
        android:layout_width="wrap_content"
        
        android:layout_height="20dp"
        android:minWidth="40dp"
        android:maxWidth="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:text="出售位置"
        />
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/room_location_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/price_tag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="价格："
            android:textColor="@color/colorBlack"
            android:layout_alignBottom="@id/room_location_name"
            android:textSize="15dp"

            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="111"
            android:textColor="@color/colorBlack"
            android:layout_alignBottom="@id/room_location_name"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:text=" / 月"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/subTag_container"
        android:layout_width="wrap_content"
        android:minWidth="100dp"

        android:layout_height="15dp"
        android:orientation="horizontal"
        android:layout_alignStart="@id/room_location_name"
        android:layout_below="@id/room_location_name"
        android:layout_marginTop="5dp"

        >
        <TextView
            android:id="@+id/live_right_now"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/colorGray"
            android:text="立即入住"
            />
        <TextView
            android:id="@+id/rent_type"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="整租/合租"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Image_container"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:layout_below="@id/subTag_container"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/subTag_container"
        >
        <ImageView
            android:padding="2dp"
            android:id="@+id/fast_show_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <ImageView

            android:id="@+id/fast_show_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            />
        <ImageView

            android:id="@+id/fast_show_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@id/Image_container"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>