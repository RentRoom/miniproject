    <ImageView
        android:id="@+id/rent_room_image"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_below="@id/subTag_container"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/subTag_container"
        />
    <TextView
        android:id="@+id/location_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/rent_room_image"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/rent_room_image"
        android:background="@drawable/ic_location_on_black_24dp"
        />
    <TextView
        android:id="@+id/rent_room_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rent_room_image"
        android:layout_marginTop="10dp"
        android:text="万利达科技大厦"
        android:layout_toRightOf="@id/location_icon"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@id/rent_room_location"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
