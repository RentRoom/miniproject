<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.qfindhouse.RentRoomDetail">
    <RelativeLayout
        android:id="@+id/rent_room_detail_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        >
        <Button
            android:id="@+id/rent_room_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rent_room_detail_header"
        android:background="@color/colorDarkGray"
        android:layout_marginTop="0dp"
        />
    <RelativeLayout
        android:id="@+id/rentroom_detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/rent_room_detail_header"
        android:background="@color/colorWhiteWhiteGray"
        >
        <TextView
            android:id="@+id/rent_room_detail_location"
            android:layout_width="wrap_content"

            android:layout_height="25dp"
            android:minWidth="40dp"
            android:maxWidth="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:text="出售位置"
            />
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/rent_room_detail_location"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            >
            <!--<TextView-->
                <!--android:id="@+id/price_tag"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="25dp"-->
                <!--android:text="价格："-->
                <!--android:textColor="@color/colorBlack"-->
                <!--android:layout_alignBottom="@id/room_location_name"-->
                <!--android:textSize="20dp"-->

                <!--/>-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="111"
                android:textColor="@color/colorBlack"
                android:layout_alignBottom="@id/room_location_name"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                />
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"

                    android:text=" / 月"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:layout_gravity="left"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/subTag_container"
            android:layout_width="wrap_content"
            android:minWidth="100dp"

            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_alignStart="@id/rent_room_detail_location"
            android:layout_below="@id/rent_room_detail_location"
            android:layout_marginTop="5dp"

            >
            <TextView
                android:id="@+id/live_right_now"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/colorGray"
                android:text="立即入住"
                />
            <TextView
                android:id="@+id/rent_type"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="整租/合租"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/subTag_container"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/subTag_container"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="描述："
                android:textSize="18dp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/rent_room_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaa"
                android:textSize="15dp"
                />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/description_container"

            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/user_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:text="GUODONGPENG"
            android:layout_below="@id/description_container"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/rent_room_detail_image_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/user_icon"
            android:layout_marginTop="20dp"
            android:layout_margin="15dp"
            android:background="@color/colorWhite"
            ></android.support.v4.view.ViewPager>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rent_room_detail_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/rent_room_detail_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorDarkGray"
            android:text="收藏"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/rent_room_detail_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/send_message_style"
            android:layout_margin="6dp"
            android:textSize="15dp"
            android:text="私信联系"
            android:textColor="@color/colorDarkGray"
            />
    </LinearLayout>
</RelativeLayout>
